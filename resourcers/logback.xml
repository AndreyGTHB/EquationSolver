<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with colors but without MDC for Main logger -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %yellow([%logger{36}]) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set default logging level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
